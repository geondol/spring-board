<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="hello.board.mapper.BoardMapper">

    <insert id="save" parameterType="hello.board.domain.Board">
        insert into table_board (title, content, name) values (#{title},#{content},#{name});
    </insert>

    <select id="boardCount" resultType="int">
        select count(boardId) from table_board;
    </select>

    <!-- 게시글 리스트 조회 -->
    <select id="findAll" resultType="hello.board.domain.Board">
        select *
        from table_board
    </select>
</mapper>